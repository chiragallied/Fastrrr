<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageViewVideoPlayerIcon"/>

        <com.fastrrr.Singletone.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:id="@+id/textViewVideoTitle"
            android:layout_below="@+id/imageViewVideoPlayerIcon"/>

        <com.fastrrr.Singletone.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8sp"
            android:textColor="@android:color/black"
            android:id="@+id/textViewVideoTime"
            android:layout_below="@+id/textViewVideoTitle"/>

    </RelativeLayout>



</LinearLayout>